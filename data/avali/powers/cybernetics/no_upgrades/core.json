{
    "type": "origins:multiple",
    "heat_go_up":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:heat_bar_resource",
            "change": 1
        },
        "condition": {
            "type": "origins:biome",
            "condition": {
                "type": "origins:temperature",
                "comparison": ">",
                "compare_to": 0.5
            }
        },
        "interval": 3
    },
    "heat_go_down":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:heat_bar_resource",
            "change": -1
        },
        "condition": {
            "type": "origins:biome",
            "condition": {
                "type": "origins:temperature",
                "comparison": "<",
                "compare_to": 0.5
            }
        },
        "interval": 5
    }
}